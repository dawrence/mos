<%= form_for(@supply) do |f| %>
  <% if @supply.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@supply.errors.count, "error") %> <%= t(:prohibited_this_supply_from_being_saved) %></h2>

      <ul>
      <% @supply.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :supply_category_id %>

  <div class="field columns small-12 medium-12">
    <%= f.label :name, t(:name) %>
    <%= f.text_field :name %>
  </div>

  <div class="actions columns small-12">
    <%= f.submit t(:save), disable_with: t(:saving), class: "button success" %>
  </div>

<% end %>
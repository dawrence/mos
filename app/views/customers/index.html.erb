<div class="contents">
  <h2 class="dark-gray">Clientes registrados</h2>
  <div class="content shown">
    <div class="table shown">
      <table class="table table-striped table-hover table-bordered">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>No. Identificación</th>
            <th>Tel</th>
            <th>Dirección</th>
            <th>Ocurrencias</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |c| %>
            <tr>
              <td><%= c.name %></td>
              <td><%= c.email %></td>
              <td><%= c.national_id %></td>
              <td><%= c.tel %></td>
              <td><%= c.address %></td>
              <td><%= c.ocurrences %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= paginate @customers %>

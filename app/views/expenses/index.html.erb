<div class="contents">
  <h2 class="dark-gray">Gastos Resgistrados del d√≠a</h2>
  <div class="content shown">
    <div class="table shown">
      <table class="table table-striped table-hover table-bordered">
        <thead>
          <tr>
          	<th>MOS No.</th>
            <th>No. de Recibo</th>
            <th>Pagador</th>
            <th><%= t(:description) %></th>
            <th>Valor</th>
          </tr>
        </thead>
        <tbody>
        	<% total = 0 %>
          <% @today_expenses.each do |expense| %>
          	<% total += expense.value %>
            <tr>
              <td>#<%= expense.id %></td>
              <td><%= expense.receipt_number %></td>
              <td><%= expense.user.mos_id %></td>
              <td><%= expense.description %></td>
              <td><%= colombian_currency expense.value %></td>
            </tr>
          <% end %>
          <tr>
          	<td colspan="4" class="text-right">
          		<b>Total:</b>
          	</td>
          	<td><%= colombian_currency total %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>


<div class="tab-links">
  <%= link_to raw("<i class='icon-plus'></i>Nuevo Gasto"), new_expense_path %>

</div>
<% content_for :controls do %>
  <%= link_to raw('<i class="icon-arrow-left icon-white"></i>'), users_path %>
<% end %>

<h2 class="dark-gray">Mis Datos</h2>

<%= form_for(@user, url: update_my_data_path) do |f| %>

  <div class="field columns small-12 medium-4">
    <%= f.label :name, "Nombre Completo" %>
    <%= f.text_field :name, required: true %>
  </div>

  <div class="field columns small-12 medium-4">
    <%= f.label :email, "Email" %>
    <%= f.email_field :email, required: true %>
  </div>

  <div class="field columns small-12 medium-4">
    <%= f.label :id_number, "Número de Identificación" %>
    <%= f.text_field :id_number, required: true %>
  </div>

  <div class="field columns small-12 medium-6">
    <%= f.label :password, "Contraseña Nueva" %>
    <%= f.password_field :password, palceholder: "Mínimo 8 caracteres", minlength: 8 %>
  </div>

  <div class="field columns small-12 medium-6">
    <%= f.label :password_confirmation, "Confirmar Contraseña Nueva" %>
    <%= f.password_field :password_confirmation, palceholder: "Mínimo 8 caracteres", minlength: 8 %>
  </div>

  
  

  <div class="actions columns small-12">
    <%= f.submit t(:save), disable_with: t(:saving), class: "button success"  %>
  </div>
  
<% end %>
<div class="contents">
  <h2 class="dark-gray">Usuarios Activos</h2>
  <div class="content shown">
    <div class="table shown">
      <table class="table table-striped table-hover table-bordered">
        <thead>
          <tr>
          	<th>Nombre</th>
            <th>Email</th>
            <th>No. Identificación</th>
            <th>Rol</th>
            <th>Último Inicio de Sesión/IP</th>
            <th>Actual Inicio de Sesión/IP</th>
            <th>Cantidad de Inicios</th>
            <th>Editar</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.id_number %></td>
              <td><%= user.print_role %></td>
              <td><%= user.last_sign_in_at.strftime("%d-%m-%Y") if user.last_sign_in_at %> / <%= user.last_sign_in_ip %></td>
              <td><%= user.current_sign_in_at.strftime("%d-%m-%Y") if user.current_sign_in_at %> / <%= user.current_sign_in_ip %></td>
              <td><%= user.sign_in_count %></td>
              <td><%= link_to_edit edit_user_path(id: user.id), :get %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


<div class="tab-links">
  <%= link_to raw("<i class='icon-plus'></i>Usuario"), new_user_path %>
</div>